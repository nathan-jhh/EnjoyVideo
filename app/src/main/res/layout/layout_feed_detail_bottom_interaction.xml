<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="4"
            android:background="@drawable/comment_dialog_editor_text_drawable"
            android:gravity="center_vertical"
            android:hint="@string/feed_detail_hint"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="12sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/interaction_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="@dimen/dp_0"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:text="赞"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_12"
            app:backgroundTint="@color/color_white"
            app:icon="@drawable/icon_cell_like"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="@color/color_000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/interaction_favorite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="@dimen/dp_0"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:text="收藏"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_12"
            app:backgroundTint="@color/color_white"
            app:icon="@drawable/icon_collect"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="@color/color_000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/interaction_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="@dimen/dp_0"
            android:padding="0dp"
            android:stateListAnimator="@null"
            android:text="分享"
            android:textColor="@color/color_000"
            android:textSize="@dimen/sp_12"
            app:backgroundTint="@color/color_white"
            app:icon="@drawable/icon_cell_share"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="@color/color_000" />
    </LinearLayout>
</LinearLayout>