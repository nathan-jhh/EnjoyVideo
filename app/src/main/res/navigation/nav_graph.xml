<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.techme.jetpack.navigation.HomeFragment">
        <action
            android:id="@+id/navigate_to_category_fragment"
            app:destination="@+id/category_fragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/category_fragment"
        android:name="com.techme.jetpack.navigation.CategoryFragment">
        <action
            android:id="@+id/navigate_to_tags_fragment"
            app:destination="@+id/tags_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/tags_fragment"
        android:name="com.techme.jetpack.navigation.TagsFragment">
        <action
            android:id="@+id/navigate_to_user_fragment"
            app:destination="@+id/user_fragment" />
    </fragment>

    <fragment
        android:id="@+id/user_fragment"
        android:name="com.techme.jetpack.navigation.UserFragment">
        <deepLink
            app:action="com.techme.jetpack.ACTION_USER"
            app:mimeType="type/video"
            app:uri="https://com.techme.jetpack/user?phone={phone}" />
    </fragment>
</navigation>